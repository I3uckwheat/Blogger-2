<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to  tag.name, tag_path(tag)%>
    </li>
    <% end %>

</ul>
<%= link_to "Delete", tag_path(@tag), data: {confirm: "Really delete this tag?"}, method: :delete %>
